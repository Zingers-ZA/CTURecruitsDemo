@using CTURectruits.ViewModels
@model ViewModel

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @if (Model.CurrentUserInstance != null && Model.CurrentUserInstance.Role == 2)
                {
                    @Html.ActionLink("CTU Recruits Admin", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
                }
                else {
                    @Html.ActionLink("CTU Recruits", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
                }
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    
                    @if (Model.CurrentUserInstance != null)
                    {
                        <li>@Html.ActionLink("Edit Profile", "Edit", "Users")</li>

                        if (Model.CurrentUserInstance.UserTypeId == 2)
                        {
                            if (Model.CurrentUserInstance.Role == 2)
                            {
                                <li>@Html.ActionLink("View Users", "Employ", "Users")</li>
                            }
                            else
                            {
                                <li>@Html.ActionLink("Employ", "Employ", "Users")</li>

                            }

                        }

                    }

                    <li>@Html.ActionLink("Success","Success","Users")</li>
                </ul>

                <ul class="nav navbar-nav pull-right">
                    @if (Model.CurrentUserInstance == null)
                    {
                        <li>@Html.ActionLink("Login", "Login", "Home")</li>
                        <li>@Html.ActionLink("SignUp", "Register", "Users")</li>
                    }
                    else
                    {
                        <li>@Html.ActionLink("Welcome "+Model.CurrentUserInstance.Name+"!", "ViewUser", "Users")</li>
                        <li>@Html.ActionLink("Log out", "Logout", "Home")</li>
                    }

                </ul>
        </div>
    </div>
</div>
<div class="container body-content">
    @RenderBody()
    <hr />
    <footer class="test">
        <p>&copy; @DateTime.Now.Year - CTU Recruits</p>
    </footer>
</div>

@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/bootstrap")
@RenderSection("scripts", required: false)
</body>
</html>
